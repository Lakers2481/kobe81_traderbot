# Kobe Trading System Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control!

# ============================================
# REQUIRED - Trading will not work without these
# ============================================

# Polygon.io API key for market data
# Get your key at: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca API credentials for trading
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY_ID=your_alpaca_key_id_here
ALPACA_API_SECRET_KEY=your_alpaca_secret_key_here

# Alpaca base URL
# Paper trading (RECOMMENDED for testing):
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# Live trading (REAL MONEY - use with caution!):
# ALPACA_BASE_URL=https://api.alpaca.markets

# ============================================
# OPTIONAL - Enhanced functionality
# ============================================

# Telegram notifications
# Create a bot via @BotFather and get your chat ID
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Health check server port
HEALTH_CHECK_PORT=8081

# Dashboard port
DASHBOARD_PORT=8080
